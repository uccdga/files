name: Create Slideshow

on:
  workflow_dispatch:
  
jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Install FFmpeg
      run: |
        sudo apt-get update
        sudo apt-get install -y ffmpeg
      shell: bash

    - name: Create Slideshow
      run: |
        ffmpeg -framerate 1/3 -pattern_type glob -i 'to_mp4/*.jpg' -vf "setpts=10*PTS" -c:v libx264 -r 30 -pix_fmt yuv420p output.mp4
      shell: bash

    - name: Publish Slideshow Artifact
      uses: actions/upload-artifact@v2
      with:
        name: slideshow-artifact
        path: output.mp4
